---
import GreatingFooter from '@components/GreatingFooter.astro'
import Flicker from './lights/Flicker.astro'
import Button from './Button.astro'
import LinkedIn from './icons/LinkedIn.astro'
import GitHub from './icons/GitHub.astro'
import Mail from './icons/Mail.astro'
import SectionComponent from './SectionComponent.astro'
interface Props {
  id?: string
}

const { id } = Astro.props
---

<SectionComponent id={id}>
  <Flicker />
  <main class='w-full h-full flex flex-col md:justify-start pt-28'>
    <h1
      class='[font-size:_clamp(5rem,_3.158rem_+_9.825vw,_12rem)] text-right font-semibold leading-none animate-flip-up animate-once'
    >
      hey,
    </h1>
    <p
      class='text-right whitespace-nowrap [font-size:_clamp(3rem,_1.158rem_+_9.825vw,_10rem)] opacity-70 animate-flip-up animate-once animate-delay-300 overflow-hidden'
    >
      Soy Esteban
    </p>
    <nav class='w-full flex gap-4 flex-wrap justify-end animate-fade-up'>
      <Button href='https://www.linkedin.com/in/drummes12/' title='LinkedIn' color='from-linkedin'>
        <LinkedIn class='size-6 sm:size-8 text-white/50 group-hover:text-white/90 group-hover:scale-105 transition' />
      </Button>
      <Button href='https://github.com/drummes12' title='GitHub' color='from-github'>
        <GitHub class='size-6 sm:size-8 text-white/50 group-hover:text-white/90 group-hover:scale-105 transition' />
      </Button>
      <Button href='mailto:drummes.12@gmail.com' title='drummes.12@gmail.com' color='from-mail'>
        <Mail class='size-6 sm:size-8 text-white/50 group-hover:text-white/90 group-hover:scale-105 transition' />
      </Button>
    </nav>
  </main>
  <GreatingFooter />
</SectionComponent>
