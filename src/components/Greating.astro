<style>
  .marquee {
    --duration: 10s;
    --gap: 4rem;

    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    opacity: 0.7;
    white-space: nowrap;
    font-size: 14rem;
  }

  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: var(--gap);
    min-width: 100%;
    animation: scroll var(--duration) linear infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .marquee__group {
      animation-play-state: paused;
    }
  }

  @media not all and (max-width: 1280px) {
    .marquee__group {
      display: none;
      animation: none;
    }
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }
</style>