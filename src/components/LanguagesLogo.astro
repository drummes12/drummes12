---
import Aws from '@components/logos/Aws.astro'
import Docker from '@components/logos/Docker.astro'
import Express from '@components/logos/Express.astro'
import Firebase from '@components/logos/Firebase.astro'
import Graphql from '@components/logos/Graphql.astro'
import JavaScript from '@components/logos/JavaScript.astro'
import MongoDB from '@components/logos/MongoDB.astro'
import MySQL from '@components/logos/MySQL.astro'
import Netlify from './logos/Netlify.astro'
import NextJs from './logos/NextJs.astro'
import NodeJs from '@components/logos/NodeJs.astro'
import PostgreSQL from './logos/PostgreSQL.astro'
import React from './logos/React.astro'
import Tailwind from './logos/Tailwind.astro'
import Vercel from './logos/Vercel.astro'
import ViteJs from './logos/ViteJs.astro'
