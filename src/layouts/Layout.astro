---
import NavBar from '@/components/NavBar.astro'
import '@fontsource-variable/dm-sans'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es' id='top'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Ven y creemos juntos las mejores e increibles aplicaciones web con Esteban [Drummes12]. Ingeniero MecatrÃ³nico y Desarrollador Web.' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg' href='/logo.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='overflow-x-hidden'>
    <NavBar />
    <main class='relative h-full w-full'>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
  html {
    font-family:
      'DM Sans Variable',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    scroll-behavior: smooth;
  }
  body {
    background: #121212;
  }

  h1, h2, h3, h4, h5, h6 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @media (prefers-reduced-motion: reduce) {
    *,
    *:hover,
    *:focus {
      animation: none !important;
      transition-property: none !important;
    }
  }

  #wall {
    opacity: 0.8;
    background-image: linear-gradient(#58585825 1px, transparent 1px),
      linear-gradient(to right, #58585825 1px, transparent 1px);
    background-size: 20px 20px;
    transform: translateZ(-2px);
  }
</style>
